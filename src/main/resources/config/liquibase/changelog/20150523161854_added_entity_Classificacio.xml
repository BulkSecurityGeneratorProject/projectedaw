<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Classificacio.
    -->
    <changeSet id="20150523161854" author="jhipster">
        <createTable tableName="CLASSIFICACIO">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="punts" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="temporada_id" type="bigint"/>
            <column name="grup_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="temporada_id"
                                 baseTableName="CLASSIFICACIO"
                                 constraintName="fk_classificacio_temporada_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TEMPORADA"/>

        <addForeignKeyConstraint baseColumnNames="grup_id"
                                 baseTableName="CLASSIFICACIO"
                                 constraintName="fk_classificacio_grup_id"
                                 referencedColumnNames="id"
                                 referencedTableName="GRUP"/>

    </changeSet>
</databaseChangeLog>
